<!-- res/drawable/rounded_padding_drawable.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with corner radius -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#97b7f3" /> <!-- Change color as needed -->
            <corners android:radius="16dp" /> <!-- Change radius as needed -->
        </shape>
    </item>

    <!-- Content with padding -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
